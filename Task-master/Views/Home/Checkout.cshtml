    var last = 'lastName';
    var address = 'address';
    var country = 'country';
    var state = 'state';
    var zip = 'zip';
    var firsts = document.getElementById(first).value;
    var lasts = document.getElementById(last).value;
    console.log(firsts);
    var addresss = document.getElementById(address).value;
    var countrys = document.getElementById(country).value;
    var states = document.getElementById(state).value;
    var zips = document.getElementById(zip).value;
    var totals = document.getElementById('total').innerHTML;
    location.href='/Home/Checkout?first='+firsts+'&last='+lasts+'&address='+addresss+'&country='+countrys+'&state='+states+'&zip='+zips+'&totalBelanja='+totals;
}
    </script>
  </body>
</html>
